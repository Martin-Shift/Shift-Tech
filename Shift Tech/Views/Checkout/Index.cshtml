@model Shift_Tech.DbModels.Cart;
@{
    Layout = "_Layout";
    var subtotal = Model.Products.Sum(x => x.Product.Price * x.ProductCount);
    var shippingPrice = subtotal / 5;
}

<head>
    @section styles{

    }
</head>
@section Scripts{
    <script>
        function formatDate(input) {
            input.value = input.value.replace(/\D/g, '');
            if (input.value.length > 2) {
                input.value = input.value.substring(0, 2) + '/' + input.value.substring(2);
            }
        }
    </script>
}
<body>
    @section header{
        <header>
        </header>
    }
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>First Name</label>
                            <input class="form-control" type="text" placeholder="John">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Last Name</label>
                            <input class="form-control" type="text" placeholder="Doe">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Mobile No</label>
                            <input class="form-control" type="text" placeholder="+123 456 789">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Line 1</label>
                            <input class="form-control" type="text" placeholder="123 Street">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Line 2</label>
                            <input class="form-control" type="text" placeholder="123 Street">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Country</label>
                            <select class="custom-select">
                                <option selected>United States</option>
                                <option>
                                    Austria
                                </option>
                                <option>
                                    Belgium
                                </option>
                                <option>
                                    Bulgaria
                                </option>
                                <option>
                                    Croatia
                                </option>
                                <option>
                                    Republic of Cyprus
                                </option>
                                <option>
                                    Czech Republic
                                </option>
                                <option>
                                    Denmark
                                </option>
                                <option>
                                    Estonia
                                </option>
                                <option>
                                    Finland
                                </option>
                                <option>
                                    France
                                </option>
                                <option>
                                    Germany
                                </option>
                                <option>
                                    Greece
                                </option>
                                <option>
                                    Hungary
                                </option>
                                <option>
                                    Ireland
                                </option>
                                <option>
                                    Italy
                                </option>
                                <option>
                                    Latvia
                                </option>
                                <option>
                                    Lithuania
                                </option>
                                <option>
                                    Luxembourg
                                </option>
                                <option>
                                    Malta
                                </option>
                                <option>
                                    Netherlands
                                </option>
                                <option>
                                    Poland
                                </option>
                                <option>
                                    Portugal
                                </option>
                                <option>
                                    Romania
                                </option>
                                <option>
                                    Slovakia
                                </option>
                                <option>
                                    Slovenia
                                </option>
                                <option>
                                    Spain
                                </option>
                                <option>
                                    Sweden
                                </option>
                            </select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>City</label>
                            <input class="form-control" type="text" placeholder="New York">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>State</label>
                            <input class="form-control" type="text" placeholder="New York">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>ZIP Code</label>
                            <input class="form-control" type="text" placeholder="123">
                        </div>
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
                <div class="collapse mb-5" id="credit-card-data">
                    <div class="card-bounding">
                        <div class="col-md-6 form-group">
                            <label for="cardNumber" class="form-label">Card Number</label>
                            <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456" maxlength="16">

                        </div>
                        <div class="col-md-6 form-group">
                            <label for="expirationDate" class="form-label">Expiration Date</label>
                            <input type="text" class="form-control" id="expirationDate" placeholder="MM/YY" maxlength="5" oninput="formatDate(this)">

                        </div>
                        <div class="col-md-6 form-group">
                            <label for="cvvCode" class="form-label">CVV Code</label>
                            <input type="password" class="form-control" id="cvvCode" placeholder="CVV" maxlength="3">

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Products</h6>
                        @foreach(var product in Model.Products){
                        <div class="d-flex justify-content-between">
                            <p>@product.Product.Name (@product.ProductCount)</p>
                            <p>$@product.Product.Price * @product.ProductCount</p>
                        </div>
                        }
                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                            <h6>$@subtotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$@shippingPrice</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>$@subtotal + @shippingPrice</h5>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Payment</span></h5>
                    <div class="bg-light p-30">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="creditcard">
                                <label class="custom-control-label" for="creditcard" data-toggle="collapse" data-target="#credit-card-data">Credit/Debit Cart</label>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="paywhenreceive">
                                <label class="custom-control-label" for="paywhenreceive" data-toggle="collapse" data-target="#credit-card-data">Pay When Received</label>
                            </div>
                        </div>
                        <button class="btn btn-block btn-primary font-weight-bold py-3">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    @section footer{
        <footer>
        </footer>
    }
</body>